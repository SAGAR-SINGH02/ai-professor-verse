# =================================
# AI Professor Verse - Backend Configuration
# =================================

# Environment
NODE_ENV=development
PORT=3000

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================================
# Database Configuration
# =================================

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_professor_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_SSL=false
POSTGRES_POOL_SIZE=20

# MongoDB (Content & Documents)
MONGODB_URI=mongodb://localhost:27017/ai_professor_content
MONGODB_MAX_POOL_SIZE=10

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=ai-professor:

# Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j123

# =================================
# Message Queue Configuration
# =================================

# Kafka (Event Streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-professor-backend
KAFKA_GROUP_ID=ai-professor-group

# RabbitMQ (Task Queue)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=ai-professor-exchange
RABBITMQ_QUEUE_PREFIX=ai-professor

# =================================
# Authentication & Security
# =================================

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production-12345678
