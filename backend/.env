# =================================
# Rate Limiting Configuration
# =================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_MAX_AUTHENTICATED=1000

# API Rate Limits (per minute)
RATE_LIMIT_AI_REQUESTS=20
RATE_LIMIT_CODE_EXECUTION=10
RATE_LIMIT_FILE_UPLOAD=5

# =================================
# Monitoring & Observability
# =================================

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Prometheus Configuration (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =================================
# Development & Testing
# =================================

# Development Tools
DEBUG_MODE=true
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true

# Mock Services (for development)
MOCK_AI_RESPONSES=false
MOCK_EMAIL_SENDING=true
MOCK_FILE_STORAGE=false

# =================================
# Performance Configuration
# =================================

# Caching
CACHE_TTL=300
CACHE_MAX_ITEMS=1000
CACHE_ENABLED=true

# Database Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Request Timeout
REQUEST_TIMEOUT=30000
UPLOAD_TIMEOUT=60000

# =================================
# Security Configuration
# =================================

# CORS Configuration
CORS_ENABLED=true
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=false
HSTS_ENABLED=false

# Encryption
ENCRYPTION_KEY=dev-encryption-key-32-characters
HASH_ROUNDS=10

# Session Security
SESSION_SECRET=dev-session-secret-key-change-in-production
SESSION_MAX_AGE=86400000
SECURE_COOKIES=false

# =================================
# Health Checks
# =================================

HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =================================
# Advanced Features
# =================================

# Gamification
GAMIFICATION_ENABLED=true
ACHIEVEMENT_SYSTEM_ENABLED=true
LEADERBOARD_ENABLED=true

# Multi-language Support
I18N_ENABLED=true
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ja,hi
