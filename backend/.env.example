# =================================
# Development & Testing
# =================================

# Development Tools
DEBUG_MODE=true
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/ai_professor_test_db
